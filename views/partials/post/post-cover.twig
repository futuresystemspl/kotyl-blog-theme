<figure class="{{ class ? class : 'post__cover' }}">
    <picture>

        <source media="(min-width: 961px)" srcset="{{ post.thumbnail.src('cover')|towebp }}" type="image/webp">
        <source media="(min-width: 961px)" srcset="{{ post.thumbnail.src('cover') }}" type="image/jpeg">

        <source media="(max-width: 960px)" srcset="{{ post.thumbnail.src('thumbnail')|towebp }}" type="image/webp">
        <source media="(max-width: 960px)" srcset="{{ post.thumbnail.src('thumbnail') }}" type="image/jpeg">  

        <img loading="lazy" src="{{ post.thumbnail.src('cover') }}" width="1280" height="1280" alt="{{ post.thumbnail.alt }}"/>
    </picture>

    <figcaption class="image__credits">{{ post.thumbnail.caption }}</figcaption>
</figure>